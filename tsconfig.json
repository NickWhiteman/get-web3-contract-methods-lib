{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES6", "es2017", "es2019"],
        "module": "ES6",
        "allowJs": true,
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": ".",
        "removeComments": true,
        "moduleResolution": "Node"
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"],
    "lib": ["esnext"],
    "ts-node": {
        "esm": true
    }
}
